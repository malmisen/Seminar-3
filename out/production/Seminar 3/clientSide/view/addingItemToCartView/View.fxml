            <ImageView fitHeight="76.0" fitWidth="108.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
      <VBox layoutX="329.0" layoutY="1.0" prefHeight="469.0" prefWidth="270.0">
         <children>
            <Label fx:id="totalPrice" prefHeight="39.0" prefWidth="70.0" text="Total price:" />
            <TextField fx:id="totalPriceField" />
            <Label fx:id="totalVAT" prefHeight="43.0" prefWidth="76.0" text="Total VAT:" />
            <TextField fx:id="totalVATField" />
            <Label prefHeight="33.0" prefWidth="45.0" text="Cart" />
            <ListView prefHeight="338.0" prefWidth="270.0" />
         </children>
      </VBox>
      <TextArea fx:id="errorMessage" editable="false" layoutX="14.0" layoutY="256.0" prefHeight="69.0" prefWidth="228.0" />
      <Button layoutX="14.0" layoutY="355.0" mnemonicParsing="false" onAction="#endSaleAction" text="End sale" />
   </children>
</AnchorPane>
